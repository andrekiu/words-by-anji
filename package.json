{
  "name": "words-by-anji",
  "version": "1.0.0",
  "description": "Boilerplate for projects using ES2017 and React",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/andrekiu/words-by-anji.git"
  },
  "scripts": {
    "start": "npm run api-build; node ./api/dist/server.js &  webpack-dev-server",
    "test": "jest",
    "flow": "flow",
    "lint:js": "eslint .",
    "lint:css": "stylelint './src/**/*.js'",
    "lint": "yarn run lint:js && yarn run lint:css",
    "api-build": "babel --plugins transform-object-rest-spread api/src/ --out-dir api/dist/ --no-babelrc --presets=flow",
    "build": "npm run api-build & webpack -p --env.NODE_ENV production",
    "prebuild": "yarn run clean",
    "clean": "rm -r -f server/dist client/dist"
  },
  "author": "Satyajit Sahoo <satyajit.happy@gmail.com> (https://github.com/satya164/)",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.7.2",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "babel-loader": "^7.1",
    "babel-plugin-transform-react-constant-elements": "^6.22.0",
    "babel-plugin-transform-react-inline-elements": "^6.22.0",
    "babel-preset-es2017": "^6.22.0",
    "babel-preset-es2017-native-modules": "^0.0.2",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-3": "^6.22.0",
    "eslint": "^4.6",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-babel": "^4.0.1",
    "eslint-plugin-flowtype": "^2.30.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^7.0",
    "extract-text-webpack-plugin": "*",
    "file-loader": "^0.10.0",
    "flow-bin": "^0.38.0",
    "jest-cli": "^18.1.0",
    "react-addons-test-utils": "^15.4.2",
    "react-hot-loader": "^1.3.1",
    "react-transform-catch-errors": "^1.0.2",
    "react-transform-hmr": "^1.0.4",
    "url-loader": "^0.5.7",
    "webpack": "^3.1.0",
    "webpack-dev-server": "^2.7"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "request": "^2.83.0"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(bmp|gif|jpg|jpeg|png|psd|svg|webp|m4v|mov|mp4|mpeg|mpg|webm|aac|aiff|caf|m4a|mp3|wav|html|pdf|ttf|otf)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css)$": "identity-obj-proxy"
    }
  }
}
